<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FFF7"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Reserva">

    <TextView
        android:id="@+id/Registro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bgborder2"
        android:text="Reseva de Vuelo"
        android:textAlignment="center"
        android:textColor="#DFFFD6"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_baseline_local_airport_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#C1C0C0"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Código:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/viewid_reserva"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Estado:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/viewestadoreserva"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3a"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#C1C0C0"
                android:text="Destino"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/viewDestinovuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgborde"
                android:text="Destino"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#C1C0C0"
                android:text="Fecha de Ida"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/viewFechaIda_Vuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgborde"
                android:text="Fecha de IDA"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#C1C0C0"
                android:text="Fecha de Reserva"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/viewFechareserva_Vuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgborde"
                android:text="Fecha de Reserva"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#C1C0C0"
                android:text="Fecha de Vuelta:"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/viewFechaVuelta_Vuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgborde"
                android:text="Fecha de vuelta"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#C1C0C0"
                android:text="Hora de Llegada"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/viewHoraLlegada_Vuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgborde"
                android:text="Hora de llegada"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#C1C0C0"
                android:text="Hora de salida"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/viewHorasalida_Vuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgborde"
                android:text="Hora de salida"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#C1C0C0"
                android:text="Origen"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/viewOrigen_Vuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgborde"
                android:text="Origen"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgborde"
        app:errorEnabled="true"
        app:startIconDrawable="@drawable/ic_baseline_comment_24">

        <EditText
            android:id="@+id/txtObservacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observación"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnReservar_vuelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_confirmacion"
        android:text="Reservar Vuelo"
        android:textColor="#9BFA80" />

</LinearLayout>