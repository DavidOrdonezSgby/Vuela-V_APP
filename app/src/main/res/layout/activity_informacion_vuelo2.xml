          android:textColor="@color/black"
          android:textStyle="bold|italic"/>

      <TextView
          android:id="@+id/viewOrigen_InformacionVuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Origen"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="@drawable/bgborde"
          android:textAlignment="center"/>
      <TextView
          android:id="@+id/textView23"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/bgborde"
          android:text="Estado"
          android:textColor="@color/black"
          android:textStyle="bold|italic"/>

      <TextView
          android:id="@+id/viewestado_informacionvuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Estado"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="@drawable/bgborde"
          android:textAlignment="center"
          />

      <TextView
          android:id="@+id/textView25"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/bgborde"
          android:text="Fecha de Ida"
          android:textColor="@color/black"
          android:textStyle="bold|italic"/>

      <TextView
          android:id="@+id/viewFechaIda_InformacionVuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Fecha de IDA"
          android:textStyle="bold"
          android:background="@drawable/bgborde"
          android:textSize="18dp"
          android:textAlignment="center"/>

      <TextView
          android:id="@+id/textView27"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/bgborde"
          android:text="Fecha de Vuelta:"
          android:textColor="@color/black"
          android:textStyle="bold|italic"
          />

      <TextView
          android:id="@+id/viewFechaVuelta_InformacionVuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bgborde"
          android:textStyle="bold"
          android:textSize="18dp"
          android:text="Fecha de vuelta"
          android:textAlignment="center"/>

      <TextView
          android:id="@+id/textView29"
          android:layout_width="match_parent"
