          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="@drawable/bgborde"
          android:text="Hora de llegada"
          android:textAlignment="center"/>

      <TextView
          android:id="@+id/textView31"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/bgborde"
          android:text="Hora de salida"
          android:textColor="@color/black"
          android:textStyle="bold|italic"/>

      <TextView
          android:id="@+id/viewHorasalida__InformacionVuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textSize="18dp"
          android:background="@drawable/bgborde"
          android:text="Hora de salida"
          android:textAlignment="center"/>



      <TextView
          android:id="@+id/textView35"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/bgborde"
          android:text="Precio"
          android:textColor="@color/black"
          android:textStyle="bold|italic"/>

      <TextView
          android:id="@+id/viewPrecio_InformacionVuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Precio"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="@drawable/bgborde"
          android:textAlignment="center"/>

      <TextView
          android:id="@+id/textView37"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/bgborde"
          android:text="Tipo de Vuelo"
          android:textColor="@color/black"
          android:textStyle="bold|italic"/>

      <TextView
          android:id="@+id/ViewTipoVuelo_InformacionVuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bgborde"
          android:text="Tipo de Vuelo"
          android:textSize="18dp"
          android:textStyle="bold"

          android:textAlignment="center"
          />


      <TextView
          android:id="@+id/textView3a"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:textSize="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/bgborde"
          android:text="Avion"
          android:textColor="@color/black"
          android:textStyle="bold|italic"/>
      <TextView
          android:id="@+id/viewAvion_InformacionVuelo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="@drawable/bgborde"
          android:text="Avión"
          android:textAlignment="center"/>

    </LinearLayout>
  </ScrollView>
  <Button
      android:id="@+id/btnReservar_InformacionVuelo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Reservar"
      android:textStyle="bold"
      android:background="@drawable/bgboton"
      android:layout_marginTop="30dp"/>


</LinearLayout>